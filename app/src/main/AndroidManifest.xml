<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ewiida.e_commerceapp">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EcommerceApp">
        <activity
            android:name="com.ewiida.e_commerceapp.ui.homeapp.homepage.trackpage.OrderTrackingActivity"
            android:exported="true" />
        <activity
            android:name="com.ewiida.e_commerceapp.ui.homeapp.cartpage.orderdetails.OrderDetailsActivity"
            android:exported="true" />
        <activity
            android:name="com.ewiida.e_commerceapp.ui.homeapp.homepage.categoriespages.CategoriesActivity"
            android:exported="false" />
        <activity
            android:name="com.ewiida.e_commerceapp.ui.homeapp.homepage.productdetails.AddToCartActivity"
            android:exported="true" />
        <activity
            android:name="com.ewiida.e_commerceapp.ui.homeapp.profilepage.SettingsActivity"
            android:exported="true" />
        <activity
            android:name="com.ewiida.e_commerceapp.ui.homeapp.profilepage.myorderspage.OngoingActivity"
            android:exported="false" />
        <activity
            android:name="com.ewiida.e_commerceapp.ui.loginscreens.LoginActivity"
            android:exported="true" />
        <activity
            android:name="com.ewiida.e_commerceapp.ui.onboarding.OnBoardingActivity"
            android:exported="true" />
        <activity
            android:name="com.ewiida.e_commerceapp.ui.homeapp.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>