<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageSliderIv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ongoing3"
        android:contentDescription="@string/product_image" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="@dimen/_40dp"
        android:layout_height="@dimen/_40dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginBottom="@dimen/_45dp"
        android:background="@drawable/_500_white_oval"
        android:padding="@dimen/_5dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageSliderIv"
        app:tint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_love"
        android:contentDescription="@string/put_in_favourites_button" />


</androidx.constraintlayout.widget.ConstraintLayout>