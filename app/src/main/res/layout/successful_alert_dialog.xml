<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/_50_white_rect"
    android:padding="50dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/successful_icon" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montbold"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginTop="17dp"
        android:text="Successful!" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/montreglaur"
        android:textSize="14sp"
        android:lineHeight="23dp"
        android:text="You have successfully your\nshopping cart list!" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montbold"
        android:textSize="16sp"
        android:background="@drawable/_50_black_rect"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_marginTop="35dp"
        android:text="Track Order" />
</LinearLayout>