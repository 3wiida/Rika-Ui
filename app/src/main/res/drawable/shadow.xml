<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:left="3dp"
                android:right="3dp"
                android:top="5dp" />
            <solid android:color="#0D343435" />
            <corners
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:left="2dp"
                android:right="2dp"
                android:top="3dp" />
            <solid android:color="#08494A4C" />
            <corners
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <solid android:color="#032C2D2E" />
            <corners
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp" />
        </shape>
    </item>


    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#ffffff" />
            <corners
                android:topLeftRadius="25dp"
                android:topRightRadius="25dp" />
        </shape>
    </item>
</layer-list>